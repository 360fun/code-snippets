{
	"name": "bungeshea/code-snippets",
	"description": "Manage code snippets running on a WordPress-powered site through a graphical interface",
	"keywords": [
		"wordpress",
		"snippets",
		"organization"
	],
	"type": "wordpress-plugin",
	"homepage": "http://code-snippets.bungeshea.com",
	"license": "MIT",
	"authors": [
		{
			"name": "Shea Bunge",
			"email": "info@bungeshea.com",
			"homepage": "http://bungeshea.com"
		}
	],
	"support": {
		"issues": "https://github.com/bungeshea/code-snippets/issues",
		"source": "https://github.com/bungeshea/code-snippets"
	},
	"require": {
		"php": ">=5.2.7",
		"codemirror": "4.6"
	},
	"require-dev": {
		"phpunit/phpunit": "3.7.*"
	},
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "codemirror",
				"version": "4.6",
				"dist": {
					"url": "http://codemirror.net/codemirror-4.6.zip",
					"type": "zip"
				}
			}
		}
	]
}
